<?xml version="1.0"?>
<widgets>
    <selector type="buto_widget/chooser">
        <name>Buto Video Selector</name>
        <description type="desc">Embed a Buto video</description>
        <parameters>
            <video_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Select a Video</label>
                <type>label</type>
                <helper_block>
                    <type>buto_widget/adminhtml_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Video...</open>
                        </button>
                    </data>
                </helper_block>
            </video_id>
        </parameters>
    </selector>
</widgets>